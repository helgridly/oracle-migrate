{
  "extends": "./node_modules/@eleks/eslint-config-eleks/base.js",
  "env": {
    "node": true,
    "browser": false,
    "es6": true
  },
  "globals": {
    "describe": true,
    "it": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true
  },
  "rules": {
    "arrow-body-style": 0,
    "consistent-return": 0,
    "curly": [2, "all"],
    "guard-for-in": 0,
    "indent": [2, 2],
    "no-debugger": 1,
    "no-magic-numbers": [2, { "ignore": [0, 1] }],
    "one-var": [2, {
      "uninitialized": "always",
      "initialized": "never"
    }],
    "operator-linebreak": [2, "after"],
    "prefer-const": 2,
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }],
    "strict": [2, "global"]
  }
}

